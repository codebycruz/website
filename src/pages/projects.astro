---
import Layout from "../layouts/Layout.astro";
import Tag from "../components/Tag.astro";
import PatternBackground from "../components/PatternBackground.astro";

const projects = (await Promise.all(
    Object.entries(import.meta.glob("./projects/*.astro")).map(
        async ([path, loader]) => {
            const post = await loader();
            const filename = path.split("/").pop()?.replace(".astro", "") || "";

            return {
                filename,
                // @ts-expect-error
                ...post,
            };
        },
    ),
)) as {
    filename: string;
    name: string;
    desc: string;
    tags: string[];
    order: number;
    cover?: string;
    coverStyle?: string;
    link?: string;
    stars?: number;
    stealth?: boolean;
    status?: "Hiatus" | "Complete" | "Ongoing";
}[];

projects.sort((a, b) => a.order - b.order);
---

<Layout>
    <h1 class="text-center text-4xl font-bold my-8">Projects</h1>

    <div class="flex flex-col items-center gap-8 px-4 lg:px-20 pb-20">
        {
            projects.map((project, index) => (
                <a
                    href={
                        project.link
                            ? project.link
                            : `/projects/${project.filename}`
                    }
                    class={`flex flex-col md:flex-row max-w-xl md:max-w-3xl lg:max-w-5xl w-full project-card transition-colors duration-300 hover:bg-black/10 rounded-lg p-4 ${
                        index % 2 === 0 ? "md:flex-row" : "md:flex-row-reverse"
                    }`}
                >
                    <div class="flex-1 overflow-hidden rounded-lg">
                        {project.cover ? (
                            <img
                                alt={project.name}
                                src={project.cover}
                                class={`${project.coverStyle ?? ""} h-56 lg:h-96 w-full object-contain drop-shadow-lg`}
                            />
                        ) : (
                            <div class="h-56 lg:h-96 w-full bg-black drop-shadow-lg relative">
                                <PatternBackground />
                            </div>
                        )}
                    </div>

                    <div class="flex-1 p-4 md:p-8 flex flex-col justify-center">
                        <div class="flex items-center justify-between mb-2">
                            <div class="flex items-center gap-2">
                                <h2 class="font-bold text-2xl">
                                    {project.name}
                                </h2>
                                {project.stars && (
                                    <div class="flex items-center gap-1 text-yellow-400">
                                        <svg
                                            class="w-5 h-5"
                                            fill="currentColor"
                                            viewBox="0 0 20 20"
                                        >
                                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                        </svg>
                                        <span class="font-medium">
                                            {project.stars}
                                        </span>
                                    </div>
                                )}
                                {project.stealth && (
                                    <div
                                        class="text-gray-400"
                                        title="Private Project"
                                    >
                                        üïµÔ∏è
                                    </div>
                                )}
                            </div>
                            {project.status && (
                                <span
                                    class={`px-2 py-1 text-xs font-medium rounded-full ${
                                        project.status === "Ongoing"
                                            ? "bg-green-500/20 text-green-400 border border-green-500/30"
                                            : project.status === "Complete"
                                              ? "bg-blue-500/20 text-blue-400 border border-blue-500/30"
                                              : project.status === "Hiatus"
                                                ? "bg-yellow-500/20 text-yellow-400 border border-yellow-500/30"
                                                : "bg-gray-500/20 text-gray-400 border border-gray-500/30"
                                    }`}
                                >
                                    {project.status}
                                </span>
                            )}
                        </div>
                        <p class="text-lg mb-4">{project.desc}</p>
                        {project.tags && project.tags.length > 0 && (
                            <div class="flex flex-wrap gap-2">
                                {project.tags.map((tag) => (
                                    <Tag text={tag} />
                                ))}
                            </div>
                        )}
                    </div>
                </a>
            ))
        }
    </div>
</Layout>

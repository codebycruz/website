---
import Layout from "../layouts/Layout.astro";

const posts = await Promise.all(
    Object.entries(import.meta.glob("./posts/*.md")).map(
        async ([path, loader]) => {
            const post = await loader();
            const filename = path.split("/").pop()?.replace(".md", "") || "";

            return {
                filename,
                ...post.frontmatter,
            };
        },
    ),
);

posts.sort((a, b) => new Date(b.published) - new Date(a.published));
---

<Layout>
    <h1 class="text-center text-4xl font-bold my-8 mb-12">Posts</h1>

    <div class="flex flex-col items-center gap-8 px-4 lg:px-20 pb-20">
        {
            posts.map((post) => (
                <a
                    href={`/posts/${post.filename}`}
                    class="flex flex-col max-w-xl md:max-w-3xl lg:max-w-5xl w-full transition-colors duration-300 hover:bg-black/10 rounded-lg p-4"
                >
                    <div class="overflow-hidden rounded-lg bg-black">
                        {post.preview ? (
                            <img
                                src={post.preview}
                                class="h-48 lg:h-64 w-full object-contain drop-shadow-lg"
                            />
                        ) : (
                            <img
                                src="/pattern.avif"
                                class="h-48 lg:h-64 w-full object-cover drop-shadow-lg"
                            />
                        )}
                    </div>

                    <div class="p-4 md:p-6">
                        <div class="flex flex-col md:flex-row md:justify-between mb-2">
                            <span class="font-bold text-2xl">{post.title}</span>
                            <span class="text-gray-400">
                                ✍️
                                {new Date(post.published).toLocaleDateString(
                                    "en-US",
                                    {
                                        weekday: "long",
                                        year: "numeric",
                                        month: "long",
                                        day: "numeric",
                                    },
                                )}
                            </span>
                        </div>
                        <p class="text-lg">{post.desc}</p>
                    </div>
                </a>
            ))
        }
    </div>
</Layout>

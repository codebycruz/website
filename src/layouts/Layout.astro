---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import Contributions from "../components/Contributions.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="description"
            content="David Cruz's technical portfolio website, listing projects and contact information"
        />

        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://codebycruz.com/" />
        <meta property="og:title" content="codebycruz - David Cruz Portfolio" />
        <meta
            property="og:description"
            content="David Cruz's technical portfolio website, listing projects and contact information"
        />
        <meta property="og:image" content="https://codebycruz.com/card.webp" />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        <meta
            property="og:image:alt"
            content="David Cruz Portfolio - codebycruz"
        />

        <title>codebycruz</title>
    </head>

    <body class="bg-neutral-900 text-white">
        <div
            class="fixed inset-0 opacity-10 pointer-events-none -z-10 flex items-center justify-center"
            style="transform: scale(3) translateY(-2%);"
        >
            <Contributions showLegend={false} />
        </div>

        <div class="flex flex-col items-center">
            <div
                class="max-w-2xl sm:max-w-3xl md:max-w-5xl lg:max-w-7xl xl:max-w-[1920px] w-full"
            >
                <Navbar />
                <slot />
                <Footer />
            </div>
        </div>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>

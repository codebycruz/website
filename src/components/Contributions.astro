---
import { getGithubContributions } from "../data/contributions.ts";

interface Props {
    showLegend?: boolean;
}

const { showLegend = true } = Astro.props;

const data = await getGithubContributions();

// Process contributions from API (already for last year)
const contributions = data?.contributions?.map((contrib) => contrib.level);

// Group contributions by weeks (7 days each)
const weeks = [];
if (contributions) {
    for (let i = 0; i < contributions.length; i += 7) {
        weeks.push(contributions.slice(i, i + 7));
    }
}
---

<div class="contributions-container">
    <div class="contributions-graph">
        <div class="contributions-grid">
            {
                weeks.map((week) => (
                    <div class="week-column">
                        {week.map((level) => (
                            <div class={`contribution-day level-${level}`} />
                        ))}
                    </div>
                ))
            }
        </div>
    </div>

    {
        showLegend && (
            <div class="legend">
                <span>Less</span>
                <div class="legend-squares">
                    <div class="contribution-day level-0" />
                    <div class="contribution-day level-1" />
                    <div class="contribution-day level-2" />
                    <div class="contribution-day level-3" />
                    <div class="contribution-day level-4" />
                </div>
                <span>More</span>
            </div>
        )
    }
</div>

<style>
    .contributions-container {
        font-family:
            -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica, Arial,
            sans-serif;
        font-size: 12px;
        color: #7d8590;
    }

    .contributions-graph {
        display: inline-block;
        padding: 16px 0 0 0;
    }

    .contributions-grid {
        display: flex;
        gap: 3px;
    }

    .week-column {
        display: flex;
        flex-direction: column;
        gap: 3px;
    }

    .contribution-day {
        width: 11px;
        height: 11px;
        border-radius: 2px;
    }

    .level-0 {
        background-color: #161b22;
    }

    .level-1 {
        background-color: #0e4429;
    }

    .level-2 {
        background-color: #006d32;
    }

    .level-3 {
        background-color: #26a641;
    }

    .level-4 {
        background-color: #39d353;
    }

    @media (prefers-color-scheme: light) {
        .level-0 {
            background-color: #ebedf0;
        }

        .level-1 {
            background-color: #9be9a8;
        }

        .level-2 {
            background-color: #40c463;
        }

        .level-3 {
            background-color: #30a14e;
        }

        .level-4 {
            background-color: #216e39;
        }
    }

    .legend {
        display: flex;
        align-items: center;
        gap: 4px;
        margin-top: 8px;
        font-size: 11px;
        color: #7d8590;
        justify-content: flex-end;
    }

    .legend-squares {
        display: flex;
        gap: 2px;
    }

    .legend-squares .contribution-day {
        width: 10px;
        height: 10px;
    }
</style>

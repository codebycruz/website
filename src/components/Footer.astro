---
import { Icon } from "astro-icon/components";
import { linkedin, x } from "../data/info";
import { github } from "../data/info";
import { email } from "../data/info";
import { rss } from "../data/info";

type LinkInfo = { to: string; label: string } & (
    | { text: string }
    | { icon: string }
);

const links = [
    { to: x, text: "ùïè", label: "ùïè" },
    {
        to: linkedin,
        icon: "mdi:linkedin",
        label: "LinkedIn",
    },
    {
        to: github,
        icon: "mdi:github",
        label: "Github",
    },
    {
        to: `mailto:${email}`,
        icon: "mdi:email",
        label: "Mail",
    },
    {
        to: rss,
        icon: "mdi:rss",
        label: "RSS Feed",
    },
] as LinkInfo[];
---

<footer class="px-4 py-8 bg-green-600 w-full">
    <div class="flex flex-row gap-2 items-center justify-center">
        {
            links.map((link) => (
                <a
                    class="text-3xl p-6 text-black/60 transition duration-300 hover:text-white"
                    href={link.to}
                    aria-label={link.label}
                >
                    {"icon" in link ? (
                        <Icon name={link.icon} size="32" />
                    ) : (
                        link.text
                    )}
                </a>
            ))
        }
    </div>
</footer>
